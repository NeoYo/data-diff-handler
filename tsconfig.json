{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        // "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        // d.ts
        "rootDir": "./src/",
        "declaration": true,
        "declarationDir": "dist",
        // "declarationMap": true,
    },
    "includes": ["src"],
    "exclude": [
        "examples/*",
        "coverage/*",
        "dist/*",
        "**/__tests__/*",
        // exclude 根目录的 js ts
        "*.js",
        "*.ts",
    ]
}
